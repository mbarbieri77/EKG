# Search everywhere query
SELECT
     ?g ?s ?p ?o
WHERE {
{
     GRAPH ?g {?s ?p ?o}
     } UNION {
     ?s ?p ?o
     BIND("default" AS ?g)
}
FILTER (
     (CONTAINS (STR(?s), ?searchString)) ||
     (CONTAINS (STR(?p), ?searchString)) ||
     (CONTAINS (STR(?o), ?searchString))
)
BIND("category-3" AS ?searchString)
}
ORDER BY
     ?g ?s

